{
    "manifest_version": 3,
    "name": "Ignotus",
    "description": "Encrypt / Decrypt your internet activity",
    "version": "1",
    "author": "Nabil",
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "index.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["cryptojs.js","content.js"]
      }
    ],
    "permissions": ["storage","activeTab","declarativeContent"]

}
